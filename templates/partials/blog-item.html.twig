{% if page.header.show_breadcrumbs is defined %}
    {% set show_breadcrumbs = page.header.show_breadcrumbs %}
{% else %}
    {% set show_breadcrumbs = true %}
{% endif %}

<div class="content-item">
	
	{% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
    <div class="breadcrumbs-box">
		{% include 'partials/breadcrumbs.html.twig' %}
    </div>
	{% endif %}

    <div class="content-item-title">
        <a href="{{ page.url }}"><h1>{{ page.title }}</h1></a>
    </div>

    <div class="content-item-txt">
        {{ page.content }}
    </div>

    {% if page.header.continue_link is sameas(true) and config.plugins.comments.enabled %}
        {% include 'partials/comments.html.twig' %}
    {% endif %}


</div>